<!-- Handle the blank state -->
<% if @meetings.count == 0 -%>
<div id="meeting_blank_state">
  <%= image_tag "meeting_blank_state.jpg", :id => "blank_state" %>
</div>
<% end -%>

<% if @past_meetings.count > 0 -%>
<h1>Past Meetings</h1>
<div style="border-top: 1px solid #aaa"></div>
<%= render :partial => 'meetings', :object => @past_meetings %>
<br />
<% end -%>

<% if @upcoming_meetings.count > 0 -%>
<h1>Upcoming Meetings</h1>
<div style="border-top: 1px solid #aaa"></div>
<%= render :partial => 'meetings', :object => @upcoming_meetings %>
<% end -%>

<% if @meetings.count == 0 -%>
<%= link_to 'Recent Meetings', meetings_path %>
<% else -%>
<%= link_to 'Next Scheduled Meeting', next_meeting_path %>
<% end -%>
<% if logged_in? && current_user.admin? -%>
| <%= link_to 'New meeting', new_meeting_path %>
<% end -%>
